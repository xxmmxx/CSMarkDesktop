                    <!--   <MenuItem Header="_Benchmarking"/> -->
                    <!--   <MenuItem Header="_Save"/> -->
                    <MenuItem Header="_Exit" Name="menuExitBtn" Click="menuExitBtn_Click"/>
                    <MenuItem Header="_Restart App" Name="menuRestartAppBtn" Click="menuRestartAppBtn_Click"/>
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Header="_View Support Information" Name="supportInfoBtn" Click="supportInfoBtn_Click"/>
                    <MenuItem Header="_About This PC" Name="menuAboutPCBtn" Click="menuAboutPCBtn_Click"/>
                    <MenuItem Header="_About CSMark App" Name="menuAboutAppBtn" Click="menuAboutAppBtn_Click"/>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>

        <TextBlock Margin="319,26,288,460" FontSize="48" Foreground="White"><Run Text="CSMarkDesktop"/></TextBlock>

        <Button Margin="429,222,400,304" FontSize="16" x:Name="benchBtn" Click="benchBtn_Click">Start Benchmark</Button>
